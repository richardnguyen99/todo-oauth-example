root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 80

[*.{json,yaml,yml}]
indent_size = 2
max_line_length = 80

[*.{html,css,scss}]
indent_size = 2
max_line_length = 80

[*.{md,markdown}]
max_line_length = 80
